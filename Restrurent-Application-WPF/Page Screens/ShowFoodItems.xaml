<Page x:Class="Restrurent_Application_WPF.Page_Screens.ShowFoodItems"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Restrurent_Application_WPF.Page_Screens"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ShowFoodItems">

    <Grid Background="LightBlue">
        <DataGrid Name="fooditemsgrid" Background="LightBlue" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding FoodName}" Width="*" Header="Food Name"/>
                <DataGridTextColumn Binding="{Binding Description}" Width="*" Header="Food Name"/>
                <DataGridTextColumn Binding="{Binding Price}" Width="*" Header="Food Name"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
